#include <stdio.h>

// Definici贸n del struct alumno de los char facilitandome hacer un meno de repeticion 
struct alumno {
    int matricula;
    char nombre[50];
    char direccion[50];
    char carrera[50];
    float nota;
};

// Funci贸n para ingresar datos de un alumno en el archivo plano segun yo ahora a ver si la cague, simplemente meti una funcion y un monton de scanf y printf de toda la vida y ya explico lo demas 
//por cierto los datos se guardan en char pero ya nada.
void ingresarAlumno(struct alumno *al) {
    printf("Ingrese la matricula del alumno: ");
    scanf("%d", &al->matricula);

    printf("Ingrese el nombre del alumno: ");
    scanf("%s", al->nombre);

    printf("Ingrese la direcci贸n del alumno: ");
    scanf("%s", al->direccion);

    printf("Ingrese la carrera del alumno: ");
    scanf("%s", al->carrera);

    printf("Ingrese la nota del alumno: ");
    scanf("%f", &al->nota);
}

// Funci贸n para imprimir los datos de un alumno nunca mejor dicho utilizando los char int y float del codigo para facilitay la imprecion horizontal hasta aqui faci.
void imprimirAlumno(struct alumno al) {
    printf("%d %s %s %s %.2f\n", al.matricula, al.nombre, al.direccion, al.carrera, al.nota);
}
